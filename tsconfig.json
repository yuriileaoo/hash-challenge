{
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs", 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "strict": true, 
    "strictPropertyInitialization": false, 
    "baseUrl": ".",
    "paths": {
      "@modules/*": [
        "./src/modules/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@configs/*": [
        "./src/configs/*"
      ],
      "@test/*": [
        "./src/test/*"
      ],
    },                         
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ], 
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,  
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true 
  },
  "exclude": [
    "jest.config.ts",
    "jest-setup-file.ts",
  ]
}
